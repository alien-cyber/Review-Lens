{
  "manifest_version": 3,
  "name": "Universal Review Fetcher",
  "version": "1.0",
  
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
